{
  "name": "dnd-tracker",
  "version": "1.0.0",
  "description": "D&D Encounter Tracker - Node.js/React full-stack web application",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/server",
    "packages/client",
    "packages/shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test:ci --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present && npm run lint:md",
    "lint:fix": "npm run lint:fix --workspaces --if-present && npm run lint:md:fix",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore '**/node_modules/**'",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --ignore '**/node_modules/**' --fix",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "prepare": "husky",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:client": "npm run dev --workspace=packages/client",
    "test:server": "npm run test --workspace=packages/server",
    "test:client": "npm run test --workspace=packages/client",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:server": "npm run build --workspace=packages/server",
    "build:client": "npm run build --workspace=packages/client",
    "docker:up": "docker-compose --env-file .env.docker up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:reset": "docker-compose down -v && docker-compose --env-file .env.docker up -d",
    "docker:services": "docker-compose --env-file .env.docker up -d mongodb redis",
    "docker:dev": "docker-compose --env-file .env.docker --profile dev up -d",
    "docker:full": "docker-compose --env-file .env.docker --profile full up -d",
    "docker:build": "docker-compose --env-file .env.docker build",
    "docker:pull": "docker-compose --env-file .env.docker pull",
    "docker:ps": "docker-compose ps",
    "docker:restart": "docker-compose restart",
    "docker:stop": "docker-compose stop",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "docker:test": "chmod +x scripts/test-docker-setup.sh && scripts/test-docker-setup.sh",
    "docker:mongo": "docker-compose exec mongodb mongosh -u admin -p dnd_tracker_password_2024 --authenticationDatabase admin",
    "docker:redis": "docker-compose exec redis redis-cli"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^22.15.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "markdownlint-cli": "^0.43.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.38.0"
  },
  "engines": {
    "node": ">=22.15.0",
    "npm": ">=10.0.0"
  },
  "author": "D&D Tracker Team",
  "license": "MIT",
  "keywords": [
    "dnd",
    "dungeons-dragons",
    "encounter-tracker",
    "initiative",
    "combat",
    "tabletop"
  ]
}
